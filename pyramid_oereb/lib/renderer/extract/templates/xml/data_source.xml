<%page args="datasource"/>
<datasource>
    <topic>
        <%include file="theme.xml" args="theme=datasource.theme"/>
    </topic>
    <dataownerName>${localized(datasource.owner.name).get('Text')}</dataownerName>
% if datasource.date:
    <transferFromSource>${datasource.date.isoformat()}</transferFromSource>
% endif
</datasource>