<%page args="geometry"/>
% if geometry.type == 'GeometryCollection':
    % for collection_member in geometry.geoms:
        %if collection_member.type == 'GeometryCollection':
            <%include file="geometry_collection.xml" args="geometry=geometry"/>
        %else:
            <%include file="specific_geometry.xml" args="geometry=collection_member"/>
        %endif
    % endfor
%else:
    <%include file="specific_geometry.xml" args="geometry=geometry"/>
% endif