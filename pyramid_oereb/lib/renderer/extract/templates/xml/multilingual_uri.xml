<%page args="text"/>
<%
    import sys
    if sys.version_info.major == 2:
        import urlparse
    else:
        from urllib import parse as urlparse
    multilingual_text = multilingual(text)
%>
% for localized_text in multilingual_text:
    <LocalisedText>
        <Language>${localized_text.get('Language')}</Language>
        % if urlparse.urlparse(localized_text.get('Text')).scheme:
            <Text>${localized_text.get('Text')|u}</Text>
        %else:
            <Text>${localized_text.get('Text')}</Text>
        % endif
    </LocalisedText>
% endfor